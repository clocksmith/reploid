{
  "name": "@reploid/kernel-tests",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "GPU kernel validation suite for Dreamer inference engine",
  "scripts": {
    "test": "npm run test:unit && npm run test:gpu",
    "test:unit": "vitest run tests/unit/",
    "test:gpu": "playwright test tests/correctness/",
    "test:gpu:headed": "playwright test tests/correctness/ --headed",
    "test:gpu:debug": "PWDEBUG=1 playwright test tests/correctness/",
    "bench": "playwright test tests/benchmarks/",
    "bench:report": "node scripts/ci-report.js",
    "serve": "python3 -m http.server 8080 --directory browser/"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^25.0.2",
    "@webgpu/types": "^0.1.68",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
