{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "server/**",
      "tests/**",
      "blueprints/**",
      "examples/**",
      "personas/**",
      "package.json",
      "package-lock.json",
      "playwright.config.js",
      "vitest.config.js",
      "eslint.config.js",
      "*.md",
      "test-results/**",
      "playwright-report/**"
    ],
    "rewrites": [
      { "source": "/r", "destination": "/index.html" },
      { "source": "/r/**", "destination": "/index.html" },
      { "source": "/d", "destination": "/doppler/demo/index.html" },
      { "source": "/d/**", "destination": "/doppler/demo/index.html" },
      { "source": "/api/models", "destination": "/api-models.json" },
      { "source": "/", "destination": "/landing.html" }
    ]
  }
}
