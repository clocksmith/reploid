{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "server/**",
      "tests/**",
      "blueprints/**",
      "examples/**",
      "personas/**",
      "package.json",
      "package-lock.json",
      "playwright.config.js",
      "vitest.config.js",
      "eslint.config.js",
      "*.md",
      "test-results/**",
      "playwright-report/**",
      "doppler/tools/*-rdrr/**",
      "**/*.gguf",
      "runs/**"
    ],
    "headers": [
      {
        "source": "/doppler/models/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/r", "destination": "/reploid.html" },
      { "source": "/r/**", "destination": "/reploid.html" },
      { "source": "/d", "destination": "/doppler/index.html" },
      { "source": "/d/**", "destination": "/doppler/index.html" },
      { "source": "/api/models", "destination": "/api-models.json" },
      { "source": "/", "destination": "/landing.html" }
    ]
  }
}
