{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable emit for build
    "noEmit": false,

    // Only compile .ts files
    "allowJs": false,
    "checkJs": false,

    // Stricter checks for compiled code
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Output
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types"
  },

  "include": [
    "./**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**/*",
    "tools/**/*",
    "kernel-tests/**/*"
  ]
}
