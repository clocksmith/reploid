{
  "name": "reploid",
  "version": "0.1.0",
  "description": "Browser-Native AI Agent with Recursive Self-Improvement",
  "main": "boot.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/clocksmith/reploid.git"
  },
  "homepage": "https://github.com/clocksmith/reploid",
  "bin": {
    "reploid": "./bin/reploid-cli.js",
    "reploid-config": "./bin/reploid-config"
  },
  "scripts": {
    "start": "node server/proxy.js",
    "cli": "node bin/reploid-cli.js",
    "dev": "concurrently \"npm run dev:proxy\" \"npm run dev:browser\"",
    "dev:proxy": "nodemon server/proxy.js",
    "dev:browser": "python3 -m http.server 8080 || python -m http.server 8080",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "keywords": [
    "reploid",
    "browser",
    "ai",
    "agent",
    "rsi",
    "self-improvement"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.16.1",
    "@google/generative-ai": "^0.1.3",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.0.0",
    "happy-dom": "^20.0.8",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
