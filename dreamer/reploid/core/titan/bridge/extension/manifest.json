{
  "manifest_version": 3,
  "name": "Titan Bridge",
  "version": "1.0.0",
  "description": "Native bridge for Titan LLM inference - bypasses browser storage limits",

  "permissions": [
    "nativeMessaging",
    "storage"
  ],

  "host_permissions": [],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*",
      "https://*.reploid.dev/*"
    ]
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA"
}
