{
  "hosting": {
    "public": "src",
    "ignore": [
      "**/.*",
      "blueprints/**",
      "**/*.gguf",
      "**/*.bin",
      "**/*.safetensors",
      "**/*.ts"
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "**/*.json",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/design", "destination": "/design.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
