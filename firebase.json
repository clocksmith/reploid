{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "server/**",
      "tests/**",
      "blueprints/**",
      "examples/**",
      "personas/**",
      "package.json",
      "package-lock.json",
      "playwright.config.js",
      "vitest.config.js",
      "eslint.config.js",
      "*.md",
      "test-results/**",
      "playwright-report/**",
      "runs/**",
      "**/*.gguf",
      "**/*.bin",
      "**/*.safetensors",
      "**/*.sh",
      "**/*.ts",
      "**/tsconfig*.json",
      "doppler/**"
    ],
    "rewrites": [
      { "source": "/design", "destination": "/design.html" },
      { "source": "**", "destination": "/reploid.html" }
    ]
  }
}
